<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/Primary">


    <TextView
            android:text="ПОГОДА"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/LOGO"
            android:textSize="56sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4sp"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColorHint="@color/LightGray"
            android:textSize="25sp"
            android:hint="Введите город"
            android:ems="10"
            android:backgroundTint="@color/Gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/PlainTextCity"
            tools:layout_editor_absoluteY="142sp"
            app:layout_constraintHorizontal_bias="0.513"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="182dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="59dp"
            android:layout_marginStart="59dp"
            android:textAlignment="viewStart"/>

    <Button
            android:text="Узнать"
            android:backgroundTint="@color/LightRed"
            android:layout_width="148dp"
            android:layout_height="78dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button"
            tools:layout_editor_absoluteY="273dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="267dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="133dp"
            android:layout_marginEnd="133dp"/>

    <TextView
            android:textSize="25sp"
            android:textColor="@color/LightGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/ResultInfo"
            tools:layout_editor_absoluteY="436sp"
            app:layout_constraintHorizontal_bias="0.53"
            android:fontFamily="sans-serif"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="-1sp"
            android:layout_marginTop="455sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"/>

    <TextView
            android:textSize="25sp"
            android:textColor="@color/LightGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/ResultInfo2"
            tools:layout_editor_absoluteY="436sp"
            app:layout_constraintHorizontal_bias="0.53"
            android:fontFamily="sans-serif"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="-1sp"
            android:layout_marginTop="500sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"/>

</RelativeLayout>